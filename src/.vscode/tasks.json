{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pintos-build",
      "type": "shell",
      "command": "./utils/build-gdb.sh",
      "args": [],
    },
    {
      "label": "pintos-qemu",
      "type": "shell",
      "command": "~/.local/bin/pintos",
      "args": ["--gdb", "--", "run", "alarm-multiple"],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
    },
    {
      "label": "pintos-bochs",
      "type": "shell",
      "command": "~/.local/bin/pintos",
      "args": ["--bochs", "--gdb", "--", "run", "alarm-multiple"],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
    },
    {
      "label": "pintos-dbg-qemu",
      "dependsOn": ["pintos-build", "pintos-qemu"],
      "dependsOrder": "sequence",
    },
    {
      "label": "pintos-dbg-bochs",
      "dependsOn": ["pintos-build", "pintos-bochs"],
      "dependsOrder": "sequence",
    },
  ]
}
